<form action="/shops/<%= @shop.id %>" method="POST" role="form">
  <div class="form-group">
    <span>Оцените заведение:</span>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="review[rating]" id="inlineRadio1" value="1">
      <label class="form-check-label" for="inlineRadio1">1 (Ужасно)</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="review[rating]" id="inlineRadio2" value="2">
      <label class="form-check-label" for="inlineRadio2">2 (Плохо)</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="review[rating]" id="inlineRadio3" value="3">
      <label class="form-check-label" for="inlineRadio3">3 (Сойдёт)</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="review[rating]" id="inlineRadio4" value="4">
      <label class="form-check-label" for="inlineRadio3">4 (Хорошо)</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="review[rating]" id="inlineRadio5" value="5">
      <label class="form-check-label" for="inlineRadio3">5 (Прекрасно)</label>
    </div>
    <span>Комментарий:</span>
    <textarea name="review[comment]" class="form-control" rows="6" placeholder="Напишите здесь свой комментарий"><%= @review.comment %></textarea>
    <br />
    <button type="submit" class="btn btn-primary">Добавить отзыв</button>
  </div>
</form>
<hr />